<?xml version="1.0" encoding="utf-8"?>
<com.feximin.mediapicker.RatioRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/test_square" />

    <View
        android:id="@+id/mask_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_transparent_30_000" />

    <ImageView
        android:id="@+id/img_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/selector_check" />
</com.feximin.mediapicker.RatioRelativeLayout>